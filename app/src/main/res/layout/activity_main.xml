<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Игра чёт-нечёт"
            android:textSize="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="80dp" android:id="@+id/textView2"/>
    <TextView
            android:text="Какое сейчас будет число? Чётное или нечётное?"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/textView" android:layout_marginTop="100dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="Чётное"
            android:onClick="chet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="310dp"
            android:id="@+id/button_chet" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="36dp"
            android:layout_marginStart="36dp"/>
    <Button
            android:text="Нечётное"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="310dp"
            android:id="@+id/button_nechet" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="36dp"
            android:layout_marginRight="36dp"
    />
    <TextView
            android:text="0"
            android:textSize="30dp"
            android:textColor="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="317dp"
            tools:layout_editor_absoluteX="197dp" android:id="@+id/resultNumber"/>
    <TextView
            android:text="Результат"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="372dp"
            tools:layout_editor_absoluteX="175dp" android:id="@+id/result"/>

</android.support.constraint.ConstraintLayout>